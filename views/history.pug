extends layout

block includes
    script(src='/js/Chart.bundle.js')
    script(src='/js/chartjs-plugin-zoom.js')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.13.0/moment.min.js")
    style.
        .container {
            width: 100vh !important
            height:100vh !important
        }

block content
    div.container(style='width:100%, height:100%')
        canvas#chart

    script.
        document.addEventListener("DOMContentLoaded", function(event) {
        	var config = !{JSON.stringify(config)};
            ctx = document.getElementById('chart').getContext('2d');
            var myChart = new Chart(ctx, config);
            myChart.canvas.parentNode.style.height = '128px';
        });
    